<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".propertyActivity.PropertyShowActivity">

    <ScrollView
        style="@style/match"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            style="@style/parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPropertyShowA"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/blue_gradient" />

            <LinearLayout style="@style/wrap">

                <ImageView
                    android:id="@+id/img1PropertyShowMini"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/blue_gradient" />


            </LinearLayout>

            <TextView
                android:id="@+id/txtNamePropertyShowA"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="@string/name"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/txtTypePropertyShowA"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="12dp"
                    android:layout_weight="0.55"
                    android:background="@drawable/type_blue"
                    android:enabled="false"
                    android:text="@string/hotel"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center">

                    <RatingBar
                        android:id="@+id/txtRatingPropertyShowA"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:weightSum="7">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/ic_location_24" />

                <TextView
                    android:id="@+id/txtProvincePropertyShowA"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:text="@string/province" />
            </LinearLayout>

            <LinearLayout
                style="@style/parent"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/amenities"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAmenitiesPropertyA"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="4dp"
                    android:paddingHorizontal="4dp" />

            </LinearLayout>

            <LinearLayout
                style="@style/parent"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:text="@string/address"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:weightSum="7">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/ic_location2_24" />

                    <TextView
                        android:id="@+id/txtAddressPropertyShowA"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:gravity="center_vertical"
                        android:text="@string/address" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/parent"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:text="@string/policy"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="8dp"
                    android:weightSum="7">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/ic_time_24" />

                    <TextView
                        android:id="@+id/txtTimePropertyShowA"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:gravity="center_vertical"
                        android:text="@string/checktime"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    style="@style/parent"
                    android:weightSum="7">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/square_stroke"
                        android:foreground="@drawable/square_strikethrough"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_weight="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:paddingHorizontal="24dp"
                            android:weightSum="2"
                            android:layout_marginVertical="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/checkin"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/txtCheckInPropertyShowA"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="After 14:00"
                                android:textStyle="italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:paddingHorizontal="24dp"
                            android:weightSum="2"
                            android:layout_marginVertical="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/checkout"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/txtCheckOutPropertyShowA"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Before 12:00"
                                android:textStyle="italic" />
                        </LinearLayout>

                    </LinearLayout>
                    //
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/parent"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:text="@string/description"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/parent"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp"
                    android:text="@string/description"
                    android:textSize="16dp"
                    android:id="@+id/txtDescriptionPropertyShowA"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/primary"
                android:layout_marginTop="8dp">

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@color/primary"
        android:weightSum="2"
        android:paddingHorizontal="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/only"
                android:gravity="center_vertical"
                android:textSize="10dp"
                android:textStyle="bold|italic"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:textColor="@color/white"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="vertical"
                android:layout_marginLeft="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:id="@+id/txtPricePropertyShowA"
                    android:text="2000000 VND"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:text="@string/perroompernight"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="4dp"
                android:text="@string/booking"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:background="@color/white"
                android:id="@+id/bookingButton"/>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>