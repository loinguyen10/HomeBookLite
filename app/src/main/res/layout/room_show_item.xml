<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        style="@style/match"
        android:background="@drawable/bg_stroke"
        android:weightSum="5"
        android:orientation="vertical"
        android:id="@+id/roomShowItem"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgRoomShowItem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:src="@drawable/blue_gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:weightSum="4">

        <TextView
            android:id="@+id/txtTypeRoomShowItem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/type"
            android:paddingHorizontal="16dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:weightSum="3"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="4"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_crop_24" />

                <TextView
                    android:id="@+id/txtSizeRoomShowItem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="@string/size"
                    android:paddingRight="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="4"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_bed_24" />

                <TextView
                    android:id="@+id/txtBedRoomShowItem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="@string/bed"
                    android:paddingRight="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="4"
                android:gravity="center_vertical"
                android:paddingLeft="8dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_people_24" />

                <TextView
                    android:id="@+id/txtPeopleRoomShowItem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="@string/people"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:layout_marginTop="8dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:orientation="vertical">

                <TextView
                    style="@style/parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/amenities"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAmenitiesRoomShowItem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="right|bottom">

                <TextView
                    style="@style/wrap"
                    android:id="@+id/txtOldPriceRoomShowItem"
                    android:text="2000000 VND"
                    android:textSize="15dp"
                    android:foreground="@drawable/text_strikethrough"
                    android:gravity="center"
                    android:textStyle="italic"
                    />

                <TextView
                    style="@style/wrap"
                    android:id="@+id/txtPriceRoomShowItem"
                    android:text="2000000 VND"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/orange"
                    android:gravity="center_vertical"
                    />

                <TextView
                    style="@style/wrap"
                    android:text="@string/perroompernight"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>