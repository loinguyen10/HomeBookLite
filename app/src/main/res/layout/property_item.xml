<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        style="@style/match"
        android:background="@drawable/bg_stroke"
        android:weightSum="5"
        android:id="@+id/propertyItem">

        <ImageView
            android:id="@+id/imgPropertyItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/blue_gradient" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="4">

            <TextView
                android:id="@+id/txtNamePropertyItem"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/name"
                android:paddingLeft="24dp"
                android:paddingRight="16dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="24dp"
                android:paddingRight="16dp">

                <Button
                    android:id="@+id/txtTypePropertyItem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="8dp"
                    android:layout_marginRight="56dp"
                    android:background="@drawable/type_blue"
                    android:enabled="false"
                    android:text="@string/hotel"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="7">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_location_24" />

                <TextView
                    android:id="@+id/txtAddressPropertyItem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:text="@string/address"
                    android:paddingRight="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">
                <!--                android:paddingHorizontal="25dp"-->
                <!--                android:weightSum="5">-->

                <RatingBar
                    android:id="@+id/txtRatingPropertyItem"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1" />

                <!--                <ImageView-->
                <!--                    android:id="@+id/starPropertyItem1"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_weight="1"-->
                <!--                    android:src="@drawable/ic_star_24" />-->

                <!--                <ImageView-->
                <!--                    android:id="@+id/starPropertyItem2"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_weight="1"-->
                <!--                    android:src="@drawable/ic_star_24" />-->

                <!--                <ImageView-->
                <!--                    android:id="@+id/starPropertyItem3"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_weight="1"-->
                <!--                    android:src="@drawable/ic_star_24" />-->

                <!--                <ImageView-->
                <!--                    android:id="@+id/starPropertyItem4"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_weight="1"-->
                <!--                    android:src="@drawable/ic_star_24" />-->

